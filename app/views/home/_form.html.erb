<div>
	<%= simple_form_for @translate, url: translate_path do |f| %>
	<%= f.input :message, placeholder: "What would you like to say?", as: :text, input_html: {rows: 10} %>
	<div style="width:50%;display:inline;">
	<%= f.button :submit, class: 'btn btn-primary', value: "Send" %>
  </div>
  <div style="width:50%;">
	<%= f.input :source, as: :radio_buttons, collection:['english', 'emoji'] %>
  </div>
	<% end %>
</div>
