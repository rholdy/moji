<div>
	<%= simple_form_for @translate, url: translate_path do |f| %>
	<%= f.input :message, placeholder: "What would you like to say?", as: :text, input_html: {rows: 10}, error: false %></br>
	<div>
	<%= f.button :submit, class: 'btn btn-primary btn-xlarge', value: "Send" %>
  </div>
  <div>
	<%= f.input :source, as: :radio_buttons, collection:['english', 'emoji'] %>
  </div>
	<% end %>
</div>
